<a href="/dashboard" class="pagination"> &larr; Back</a>
<div class="admin-title">
  <h2>Edit Post</h2>
</div>

<div class="edit-post-form">
  <form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>" class="wide-input">
    
    <label for="body"><b>Content</b></label>
    <textarea name="body" cols="50" rows="10" class="wide-input"><%= data.body %></textarea>

    <input type="submit" value="Update" class="btn">
  </form>
</div>
